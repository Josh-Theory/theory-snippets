{
  "Block Boilerplate": {
    "prefix": ["bbp"],
    "body": [
      "{% doc %}",
      "  ${TM_FILENAME_BASE} block",
      "",
      "  @example",
      "  {% content_for 'block', type: '${TM_FILENAME_BASE}', id: '${TM_FILENAME_BASE/^_+//}-1' %}",
      "{% enddoc %}",
      "",
      "$0",
      "",
      "{% schema %}",
      "{",
      "  \"name\": \"${TM_FILENAME_BASE/([^-]*)(-?)/${1:/capitalize}${2:+ }/g}\",",
      "  \"settings\": [",
      "  ],",
      "  \"presets\": [",
      "    {",
      "      \"name\": \"${TM_FILENAME_BASE/([^-]*)(-?)/${1:/capitalize}${2:+ }/g}\",",
      "      \"category\": \"TD\"",
      "    }",
      "  ]",
      "}",
      "{% endschema %}" 
    ]
  },
  "Project Section Boilerplate": {
    "prefix": ["psbp"],
    "body": [
      "<div class='${TM_FILENAME_BASE}__container'  style=\"{% render 'td-spacing-padding', settings: section.settings %}\">",
      "  $0",
      "</div>",      
      "{%- stylesheet -%}",
      "{%- endstylesheet -%}",
      "",
      "{% schema %}",
      "{",
      "  \"name\": \"${TM_FILENAME_BASE/([^-]*)(-?)/${1:/capitalize}${2:+ }/g}\",",
      "  \"class\": \"${TM_FILENAME_BASE} td-section\",",
      "  \"tag\": \"section\",",
      "  \"settings\": [",
      "      {",
      "        \"type\": \"header\",",
      "        \"content\": \"Layout\"",
      "      },",
      "      {",
      "        \"type\": \"header\",",
      "        \"content\": \"t:content.appearance\"",
      "      },",
      "      {",
      "        \"type\": \"color_scheme\",",
      "        \"id\": \"color_scheme\",",
      "        \"label\": \"t:settings.color_scheme\",",
      "        \"default\": \"scheme-1\"",
      "      },",
      "      {",
      "        \"type\": \"header\",",
      "        \"content\": \"t:content.size\"",
      "      },",
      "      {",
      "        \"type\": \"select\",",
      "        \"id\": \"section_width\",",
      "        \"label\": \"t:settings.width\",",
      "        \"options\": [",
      "          {",
      "            \"value\": \"page-width\",",
      "            \"label\": \"t:options.page\"",
      "          },",
      "          {",
      "            \"value\": \"full-width\",",
      "            \"label\": \"t:options.full\"",
      "          }",
      "        ],",
      "        \"default\": \"page-width\"",
      "      },",
      "      {",
      "        \"type\": \"header\",",
      "        \"content\": \"t:content.padding\"",
      "      },",
      "      {",
      "        \"type\": \"range\",",
      "        \"id\": \"padding_top\",",
      "        \"label\": \"Padding Top\",",
      "        \"min\": 0,",
      "        \"max\": 100,",
      "        \"step\": 1,",
      "        \"unit\": \"px\",",
      "        \"default\": 64",
      "      },",
      "      {",
      "        \"type\": \"range\",",
      "        \"id\": \"padding_bottom\",",
      "        \"label\": \"Padding Bottom\",",
      "        \"min\": 0,",
      "        \"max\": 100,",
      "        \"step\": 1,",
      "        \"unit\": \"px\",",
      "        \"default\": 84",
      "      },",
      "      {",
      "        \"type\": \"range\",",
      "        \"id\": \"padding_horizontal\",",
      "        \"label\": \"Padding Left/Right\",",
      "        \"min\": 0,",
      "        \"max\": 100,",
      "        \"step\": 1,",
      "        \"unit\": \"px\",",
      "        \"default\": 0",
      "      },",
      "      {",
      "        \"type\": \"checkbox\",",
      "        \"id\": \"custom_padding_mobile\",",
      "        \"label\": \"Different padding on mobile\",",
      "        \"default\": true,",
      "        \"info\": \"Enable different padding values for mobile screens\"",
      "      },",
      "      {",
      "        \"type\": \"range\",",
      "        \"id\": \"padding_top_mobile\",",
      "        \"label\": \"Padding Top (Mobile)\",",
      "        \"min\": 0,",
      "        \"max\": 100,",
      "        \"step\": 1,",
      "        \"unit\": \"px\",",
      "        \"default\": 40,",
      "        \"visible_if\": \"{{ section.settings.custom_padding_mobile }}\"",
      "      },",
      "      {",
      "        \"type\": \"range\",",
      "        \"id\": \"padding_bottom_mobile\",",
      "        \"label\": \"Padding Bottom (Mobile)\",",
      "        \"min\": 0,",
      "        \"max\": 100,",
      "        \"step\": 1,",
      "        \"unit\": \"px\",",
      "        \"default\": 40,",
      "        \"visible_if\": \"{{ section.settings.custom_padding_mobile }}\"",
      "      },",
      "      {",
      "        \"type\": \"range\",",
      "        \"id\": \"padding_horizontal_mobile\",",
      "        \"label\": \"Padding Left/Right (Mobile)\",",
      "        \"min\": 0,",
      "        \"max\": 100,",
      "        \"step\": 1,",
      "        \"unit\": \"px\",",
      "        \"default\": 0,",
      "        \"visible_if\": \"{{ section.settings.custom_padding_mobile }}\"",
      "      }",
      "  \"presets\": [",
      "    {",
      "      \"name\": \"${TM_FILENAME_BASE/([^-]*)(-?)/${1:/capitalize}${2:+ }/g}\",",
      "      \"category\": \"SB\"",
      "    }",
      "  ]",
      "}",
      "{% endschema %}"
    ]
  },
  "Section Boilerplate": {
    "prefix": ["sbp"],
    "body": [
      "<div class='${TM_FILENAME_BASE}__container'  style=\"{% render 'td-style-attributes', settings: section.settings %}\">",
      "  $0",
      "</div>",      
      "{%- stylesheet -%}",
      "{%- endstylesheet -%}",
      "",
      "{% schema %}",
      "{",
      "  \"name\": \"${TM_FILENAME_BASE/([^-]*)(-?)/${1:/capitalize}${2:+ }/g}\",",
      "  \"class\": \"${TM_FILENAME_BASE} td-section\",",
      "  \"tag\": \"section\",",
      "  \"settings\": [",
      "    {",
      "      \"type\": \"header\",",
      "      \"content\": \"Colors\",",
      "      \"info\": \"Set to Transparent for default colors.\"",
      "    },",
      "    {",
      "      \"type\": \"color\",",
      "      \"id\": \"bg_color\",",
      "      \"label\": \"Background color\"",
      "    },",
      "    {",
      "      \"type\": \"color\",",
      "      \"id\": \"fg_color\",",
      "      \"label\": \"Text color\"",
      "    },",
      "    {",
      "      \"type\": \"header\",",
      "      \"content\": \"Padding\",",
      "    },",
      "    {",
      "      \"type\": \"range\",",
      "      \"id\": \"padding_top\",",
      "      \"min\": 0,",
      "      \"max\": 100,",
      "      \"step\": 2,",
      "      \"unit\": \"px\",",
      "      \"label\": \"Padding top\",",
      "      \"default\": 0",
      "    },",
      "    {",
      "      \"type\": \"range\",",
      "      \"id\": \"padding_bottom\",",
      "      \"min\": 0,",
      "      \"max\": 100,",
      "      \"step\": 2,",
      "      \"unit\": \"px\",",
      "      \"label\": \"Padding bottom\",",
      "      \"default\": 0",
      "    }",
      "  ],",
      "  \"presets\": [",
      "    {",
      "      \"name\": \"${TM_FILENAME_BASE/([^-]*)(-?)/${1:/capitalize}${2:+ }/g}\",",
      "      \"category\": \"TD\"",
      "    }",
      "  ]",
      "}",
      "{% endschema %}"
    ]
  },
  "Section Boilerplate Baseline": {
    "prefix": ["sbpb"],
    "body": [
      "$0",
      "",
      "{% schema %}",
      "{",
      "  \"name\": \"${TM_FILENAME_BASE/([^-]*)(-?)/${1:/capitalize}${2:+ }/g}\",",
      "  \"class\": \"${TM_FILENAME_BASE} td-section\",",
      "  \"tag\": \"section\",",
      "  \"settings\": [],",
      "  \"presets\": [",
      "    {",
      "      \"name\": \"${TM_FILENAME_BASE/([^-]*)(-?)/${1:/capitalize}${2:+ }/g}\"",
      "    }",
      "  ]",
      "}",
      "{% endschema %}"
    ]
  },
  "Legacy Section Boilerplate Baseline": {
    "prefix": ["lsbpb"],
    "body": [
      "{{ 'section-${TM_FILENAME_BASE}.css' | asset_url | stylesheet_tag }}",
      "",
      "{% schema %}",
      "{",
      "  \"name\": \"${TM_FILENAME_BASE/([^-]*)(-?)/${1:/capitalize}${2:+ }/g}\",",
      "  \"class\": \"${TM_FILENAME_BASE} td-section\",",
      "  \"tag\": \"section\",",
      "  \"settings\": [],",
      "  \"presets\": [",
      "    {",
      "      \"name\": \"${TM_FILENAME_BASE/([^-]*)(-?)/${1:/capitalize}${2:+ }/g}\"",
      "    }",
      "  ]",
      "}",
      "{% endschema %}"
    ]
  },
  "Legacy Section Boilerplate": {
    "prefix": ["lsbp"],
    "body": [
      "{{ 'section-${TM_FILENAME_BASE}.css' | asset_url | stylesheet_tag }}",
      "",
      "$0",
      "",
      "{%- style -%}",
      "/* COLORS */",
      "#shopify-section-{{ section.id }}{",
      "  {% if section.settings.bg_color.alpha > 0 %}",
      "    --bg-color: {{ section.settings.bg_color }};",
      "  {% endif %}",
      "  {% if section.settings.text_color.alpha > 0 %}",
      "    --text-color: {{ section.settings.text_color }};",
      "  {% endif %}",
      "}",
      "",
      "/* PADDING */",
      "#shopify-section-{{ section.id }} {",
      "  padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;",
      "  padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;",
      "}",
      "",
      "@media screen and (min-width: 990px) {",
      "  #shopify-section-{{ section.id }} {",
      "    padding-top: {{ section.settings.padding_top }}px;",
      "    padding-bottom: {{ section.settings.padding_bottom }}px;",
      "  }",
      "}",
      "{%- endstyle -%}",
      "",
      "{% schema %}",
      "{",
      "  \"name\": \"${TM_FILENAME_BASE/([^-]*)(-?)/${1:/capitalize}${2:+ }/g}\",",
      "  \"class\": \"${TM_FILENAME_BASE} td-section\",",
      "  \"tag\": \"section\",",
      "  \"settings\": [",
      "    {",
      "        \"type\": \"header\",",
      "        \"content\": \"Colors\",",
      "        \"info\": \"Set to Transparent for default colors.\"",
      "    },",
      "    {",
      "        \"type\": \"color\",",
      "        \"id\": \"bg_color\",",
      "        \"label\": \"Background color\"",
      "    },",
      "    {",
      "        \"type\": \"color\",",
      "        \"id\": \"text_color\",",
      "        \"label\": \"Text color\"",
      "    },",
      "    {",
      "        \"type\": \"header\",",
      "        \"content\": \"Padding\",",
      "    },",
      "    {",
      "        \"type\": \"range\",",
      "        \"id\": \"padding_top\",",
      "        \"min\": 0,",
      "        \"max\": 100,",
      "        \"step\": 2,",
      "        \"unit\": \"px\",",
      "        \"label\": \"Padding top\",",
      "        \"default\": 0",
      "    },",
      "    {",
      "        \"type\": \"range\",",
      "        \"id\": \"padding_bottom\",",
      "        \"min\": 0,",
      "        \"max\": 100,",
      "        \"step\": 2,",
      "        \"unit\": \"px\",",
      "        \"label\": \"Padding bottom\",",
      "        \"default\": 0",
      "    }  ",
      "  ],",
      "  \"presets\": [",
      "    {",
      "      \"name\": \"${TM_FILENAME_BASE/([^-]*)(-?)/${1:/capitalize}${2:+ }/g}\"",
      "    }",
      "  ]",
      "}",
      "{% endschema %}"
    ]
  },
  "Legacy Swiper Boilerplate": {
    "prefix": ["lswp", "lswiper"],
    "body": [
      "{%- capture sliderOptions -%}",
      "  {",
      "    \"centeredSlides\": true,",
      "    \"slidesPerView\": 1,",
      "    \"spaceBetween\": 10,",
      "    \"loop\": {{ section.settings.loop }},",
      "    \"breakpoints\": {",
      "      \"450\": {",
      "        \"slidesPerView\": \"auto\"",
      "      }",
      "    }",
      "  }  ",
      "{%- endcapture -%}",
      "",
      "{% if ${1:section.blocks.size > 0} %}",
      "  <swiper-slider data-swiper-options='{{sliderOptions}}'>",
      "    <div class=\"swiper ${TM_FILENAME_BASE}__swiper\" data-swiper>",
      "      <div class=\"swiper-wrapper ${TM_FILENAME_BASE}__swiper-wrapper\">",
      "        {% for ${2:block} in ${3:section.blocks} %}",
      "          <div class=\"swiper-slide ${TM_FILENAME_BASE}__slide\" data-swiper-slide>",
      "            $0",
      "          </div>",
      "        {% endfor %}",
      "      </div>",
      "    </div>",
      "  </swiper-slider>",
      "{% endif %}"
    ]
  },
  "Javascript asset":{
    "prefix": ["js", "jsa"],
    "body": [
      "<script src='{{ 'section-${TM_FILENAME_BASE}.js' | asset_url }}' defer></script>"
    ]
  },
  "Javascript module":{
    "prefix": ["jm", "jsm"],
    "body": [
      "<script src='{{ 'component-${TM_FILENAME_BASE}.js' | asset_url }}' type='module'></script>"
    ]
  },
  "CSS asset":{
    "prefix": ["css"],
    "body": [
      "{{ 'section-${TM_FILENAME_BASE}.css' | asset_url | stylesheet_tag }}"
    ]
  },
  "Style tag":{
    "prefix": ["style"],
    "body": [
      "{%- style -%}",
      "  $0",
      "{%- endstyle -%}"
    ]
  },
  "Stylesheet tag":{
    "prefix": ["ts", "st", "stylesheet tag"],
    "body": [
      "{%- stylesheet -%}",
      "  $0",
      "{%- endstylesheet -%}"
    ]
  },
  "Javascript tag":{
    "prefix": ["js", "jst", "javascript tag"],
    "body": [
      "{%- javascript -%}",
      "  $0",
      "{%- endjavascript -%}"
    ]
  },
  "Legacy Section style boilerplate":{
    "prefix": ["lsstyle", "lsecstyle"],
    "body": [
      "{%- style -%}",
      "  /* COLORS */",
      "  #shopify-section-{{ section.id }}{",
      "    {% if section.settings.bg_color.alpha > 0 %}",
      "      --bg-color: {{ section.settings.bg_color }};",
      "    {% endif %}",
      "    {% if section.settings.text_color.alpha > 0 %}",
      "      --text-color: {{ section.settings.text_color }};",
      "    {% endif %}",
      "  }",
      "",
      "  /* PADDING */",
      "  #shopify-section-{{ section.id }} {",
      "    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;",
      "    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;",
      "  }",
      "",
      "  @media screen and (min-width: 990px) {",
      "    #shopify-section-{{ section.id }} {",
      "      padding-top: {{ section.settings.padding_top }}px;",
      "      padding-bottom: {{ section.settings.padding_bottom }}px;",
      "    }",
      "  }",
      "{%- endstyle -%}"
    ]
  },
  "Badge": {
    "prefix": ["badge"],
    "body": [
      "{% if object.metafields.custom.badge != blank %}",
      "  <span",
      "    class='td-badge {{ class }}'",
      "    style='color: {{ object.metafields.custom.badge.value.text_color }}; background-color: {{ object.metafields.custom.badge.value.background_color }};'",
      "  >",
      "  {{ object.metafields.custom.badge.value.text }}",
      " </span>",
      "{% endif %}"
    ]
  },
  "Base Class": {
    "prefix": ["bclass", "bc"],
    "body": [
      "class='${TM_FILENAME_BASE}$1'"
    ]
  },
  "Image Tag": {
    "prefix": ["imgtag"],
    "body": [
      "{{ ${1:section.settings.image} | image_url: width: ${3:2000} | image_tag: alt: ${1:section.settings.image}.alt, loading: 'lazy', class: '${TM_FILENAME_BASE}__image$2' }}"
    ]
  },
  "Block Content": {
    "prefix": ["cb", "contentblock"],
    "body": [
      "{% content_for 'block', type: '${1:${TM_FILENAME_BASE}}', id: '${1:${TM_FILENAME_BASE}}' %}"
    ]
  },
  "Blocks Content": {
    "prefix": ["cbs", "contentblocks"],
    "body": [
      "{% content_for 'blocks' %}"
    ]
  },
  "Product Block Content": {
    "prefix": ["cbp", "contentblockproduct"],
    "body": [
      "{% content_for 'block', type: '${1:${TM_FILENAME_BASE}}', id: 'product-details', closest.product: closest.product %}"
    ]
  },
  "Swiper Block Content": {
    "prefix": ["cbsp", "contentblockswiper"],
    "body": [
      "{% # theme-check-disable %}",
      "{% comment %} Disable 'content_for block capture' check {% endcomment %}",
      "{% liquid",
      "  if section.blocks.size > 0",
      "    capture slide_contents",
      "    content_for 'blocks'",
      "    endcapture",
      "    content_for 'block', type: '_td-slider', id: 'static-slider', children: slide_contents, classes: '${TM_FILENAME_BASE}__slider'",
      "  else",
      "    render 'td-no-content', context: \"slides\"",
      "  endif",
      "%}",
      "{% # theme-check-enable %}"
    ]
  },
  "Render TD Badge": {
    "prefix": ["rbdg", "rtdbadge", "rabadge", "rbdge"],
    "body": [
      "{% render 'td-badge', object: ${1:product}, class: '${TM_FILENAME_BASE}__badge$2' %}"
    ]
  },
  "If Title": {
    "prefix": ["ifti", "iti", "iftitle"],
    "body": [
      "{% if ${1:section.settings.title} != blank %}",
      "  <h2 class='${TM_FILENAME_BASE}__title td-title$2'>{{ ${1:section.settings.title} }}</h2>",
      "{% endif %}"
    ]
  },
  "If Text": {
    "prefix": ["ifte", "ite", "iftext"],
    "body": [
      "{% if ${1:section.settings.text} != blank %}",
      "  <div class='${TM_FILENAME_BASE}__text td-text$2'>{{ ${1:section.settings.text} }}</div>",
        "{% endif %}"
    ]
  },
  "If Image": {
    "prefix": ["ifi", "iimg", "ifimage"],
    "body": [
      "{% if ${1:section.settings.image} != blank %}",
      "  {{ ${1:section.settings.image} | image_url: width: ${3:2000} | image_tag: alt: ${1:section.settings.image}.alt, loading: 'lazy', class: '${TM_FILENAME_BASE}__image$2' }}",
      "{% endif %}"
    ]
  },
  "If Button": {
    "prefix": ["ifb", "ibtn", "ifbutton"],
    "body": [
      "{% if ${1:section.settings.link} != blank and ${2:section.settings.cta} != blank %}",
      "  <a href='{{ ${1:section.settings.link} }}' class='${TM_FILENAME_BASE}__button td-button$3'>{{ ${2:section.settings.cta} }}</a>",
      "{% endif %}"
    ]
  },
  "Attributes attribute":{
    "prefix": ["attrs", "attributes"],
    "body": [
      " style=\"{% render 'td-style-attributes', settings: section.settings %}\""
    ]
  },
  "Duplicate comment":{
    "prefix": ["dupe"],
    "body": [
      "{% comment %} Copy of ${TM_FILENAME/(^td-)?(.*?)/$2/} {% endcomment %}"
    ]
  },
  "Duplicate text":{
    "prefix": ["dupetext", "dtext"],
    "body": [
      "{% comment %} Copy of ${TM_FILENAME/(^td-)?(.*?)/$2/} {% endcomment %}"
    ]
  },
  "Themecheck disable": {
    "prefix": ["disable", "themecheckdisable"],
    "body": [
      "{% # theme-check-disable %}"
    ]
  },
  "Theme check enable": {
    "prefix": ["enable", "themecheckenable"],
    "body": [
      "{% # theme-check-enable %}"
    ]
  },
  "Metaobject loop":{
    "prefix": ["mloop", "metaobjectloop"],
    "body": [
      "{% for object in shop.metaobjects.${1:object_type}.values %}",
      "  $0",
      "{% endfor %}"
    ]
  },
  "Richtext metaoject loop":{
    "prefix": ["rml", "mlr", "rmetaobjectloop"],
    "body": [
      "{% for object in shop.metaobjects.${1:object_type}.values %}",
      "  {{ object.${2:text} | metafield_tag }}$0",
      "{% endfor %}"
    ]
  },
  "Link Option":{
    "prefix": ["lopt", "link option"],
    "body": [
      "{% if ${1:section.settings.url} != blank %}",
      "  <a href=\"{{ ${1:section.settings.url} }}\" class=\"${TM_FILENAME_BASE}__${2:container} ${TM_FILENAME_BASE}__${2:container}--link\">",
      "{% else %}",
      "  <div class=\"${TM_FILENAME_BASE}__${2:container}\">",
      "{% endif %}",
      "  $0",
      "{% if ${1:section.settings.url} != blank %}",
      "  </a>",
      "{% else %}",
      "  </div>",
      "{% endif %}"
    ]
  },
  "If Main Title": {
    "prefix": ["mt", "ifmt", "imt", "ifmain"],
    "body": [
      "{% if ${1:section.settings.title} != blank %}",
      "  {% if section.index == 1 %}<h1{% else %}<h2{% endif %} class='${TM_FILENAME_BASE}__title td-title$2'>{{ ${1:section.settings.title} }}{% if section.index == 1 %}</h1{% else %}</h2{% endif %}>",
      "{% endif %}"
    ]
  },
  "Button Schema":{
    "prefix": ["_button"],
    "body": [
      "{",
      "  \"type\": \"header\",",
      "  \"content\": \"Button\"",
      "},",
      "{",
      "  \"type\": \"url\",",
      "  \"id\": \"link\",",
      "  \"label\": \"Button link\"",
      "},",
      "{",
      "  \"type\": \"text\",",
      "  \"id\": \"cta\",",
      "  \"label\": \"Button CTA\"",
      "},"
    ]
  },
  "Collection List Schema":{
    "prefix": ["_cl","_clist"],
    "body": [
      "{",
      "  \"type\": \"collection_list\",",
      "  \"id\": \"collection_list\",",
      "  \"label\": \"Collections\"",
      "}"
    ]
  }
}