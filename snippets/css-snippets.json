{
  "Base Class":{
    "prefix": ["bc","base"],
    "body": [
      "${TM_FILENAME_BASE/(section-)/./}$1 {",
      "  $2",
      "}"
    ]
  },
  "Card Class":{
    "prefix": ["bcard","base card"],
    "body": [
      "${TM_FILENAME_BASE/(section-)/./}__card$1 {",
      "  $2",
      "}"
    ]
  },
  "Title Class":{
    "prefix": ["btitle","base title"],
    "body": [
      "${TM_FILENAME_BASE/(section-)/./}__title {",
      "  $1",
      "}"
    ]
  },
  "Text Class":{
    "prefix": ["btext","base text"],
    "body": [
      "${TM_FILENAME_BASE/(section-)/./}__text * {",
      "  $1",
      "}"
    ]
  },
  "Button Class":{
    "prefix": ["bbtn","bbutton","base button"],
    "body": [
      "${TM_FILENAME_BASE/(section-)/./}__button {",
      "  $1",
      "}"
    ]
  },
  "Grid center":{
    "prefix": ["gce","gcenter"],
    "body": [
      "display: grid;",
      "place-items: center;"
    ]
  },
  "Flex gallery":{
    "prefix": ["gallery, gf"],
    "body": [
      "display: flex;",
      "--column-count: 2;",
      "--inline-gap: 12px;",
      "--gap-count: calc(var(--column-count) - 1);",
      "gap: 20px var(--inline-gap);",
      "flex-wrap: wrap;",
      "justify-content: center;",
      "align-items: center;"
    ]
  },
  "Card width":{
    "prefix": ["Card width", "cw"],
    "body": [
      "width: calc((100% - var(--inline-gap, 12px) * var(--gap-count, 1)) / var(--column-count, 2));"
    ]
  },
  "A11y font size":{
    "prefix": ["afs"],
    "body": [
      "font-size: calc(${1:16} / var(--td-base-font-size, 16) * 1rem);"
    ]
  },
  "A11y font size value":{
    "prefix": ["afsv"],
    "body": [
      "calc(${1:16} / var(--td-base-font-size, 16) * 1rem);"
    ]
  },
  "Trim RTE margins":{
    "prefix": ["trim", "rte"],
    "body": [
      "${TM_FILENAME_BASE/(section-)/./}__text *:first-child {",
      "  margin-top: 0;",
      "}",
      "${TM_FILENAME_BASE/(section-)/./}__text *:last-child {",
      "  margin-bottom: 0;",
      "}"
    ]
  },
  "Pause animation":{
    "prefix": ["pause animation"],
    "body": [
      "animation-play-state: paused;"
    ]
  },
  "Line clamp":{
    "prefix": ["Line clamp", "lc"],
    "body": [
      "display: -webkit-box;",
      "-webkit-line-clamp: ${1:3};",
      "-webkit-box-orient: vertical;",
      "overflow: hidden;$0"
    ]
  },
  "MQ 375px":{
    "prefix": ["M0","M375"],
    "body": [
      "@media screen and (max-width: 375px){",
      "    $1",
      "}"
    ]
  },
  "MQ 767px":{
    "prefix": ["M1","M767"],
    "body": [
      "@media screen and (min-width: 767px){",
      "    $1",
      "}"
    ]
  },
  "MQ 1024px":{
    "prefix": ["M2","M1024"],
    "body": [
      "@media screen and (min-width: 1024px){",
      "    $1",
      "}"
    ]
  },
  "MQ 1280px":{
    "prefix": ["M3","M1280"],
    "body": [
      "@media screen and (min-width: 1280px){",
      "    $1",
      "}"
    ]
  },
  "MQ 1440px":{
    "prefix": ["M4","M1440"],
    "body": [
      "@media screen and (min-width: 1440px){",
      "    $1",
      "}"
    ]
  },
  "MQ 1920px":{
    "prefix": ["M5","M1920"],
    "body": [
      "@media screen and (min-width: 1920px){",
      "    $1",
      "}"
    ]
  }
}